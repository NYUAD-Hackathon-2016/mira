<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="phone.ui.tut.blundell.com.siri.AddNew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:hint="Drug Name"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Repeat"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:id="@+id/addNew_repeat"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="190dp"
                android:background="@color/colorAccent"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Date range"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="60dp"
                android:id="@+id/addNew_start"
                android:background="@color/colorAccent"
                android:textSize="15sp"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="End"
                android:id="@+id/addNew_end"
                android:textColor="#FFFFFF"
                android:background="@color/colorAccent"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Medicine Picture"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:gravity="center"
                android:id="@+id/addNew_photo"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="98dp"
                android:background="@color/colorAccent"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Dose"
                android:id="@+id/addNew_dose"
                android:textColor="#000000"
                android:textSize="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:gravity="center"
                android:id="@+id/addNew_time"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="150dp"
                android:background="@color/colorAccent"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/addNew_add"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:text="Confirm"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>